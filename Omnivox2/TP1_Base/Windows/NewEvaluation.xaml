<Window x:Class="TP1_Base_Prof.NewEvaluation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP1_Base_Prof.Windows"
        mc:Ignorable="d"
        Title="DEBUG | Ajouter une evaluation" Height="200" Width="375">
    <Grid>
        <StackPanel>
            <Label x:Name="nomCours" HorizontalAlignment="Center" FontSize="16">Introduction a la profession</Label>
            
            <WrapPanel Margin="0 5 0 0">
                <Label FontSize="14">Nom de l'evaluation :</Label>
                <TextBox x:Name="nomEval" FontSize="14" Width="150"></TextBox>
            </WrapPanel>

            <WrapPanel Margin="0 10 0 0">
                <Label FontSize="14">Valeur de l'evaluation :</Label>
                <TextBox x:Name="valEval" FontSize="14" Width="150"></TextBox>
            </WrapPanel>

            <Button x:Name="addEval" Width="250" HorizontalAlignment="Center" Margin="0 20 0 0" FontSize="14" Click="addEval_Click">Ajouter</Button>
        </StackPanel>

    </Grid>
</Window>
