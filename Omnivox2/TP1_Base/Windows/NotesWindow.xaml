<Window x:Class="TP1_Base_Prof.NotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP1_Base_Prof.Windows"
        mc:Ignorable="d"
        Title="NotesWindow" Height="450" Width="400">
    <Grid>

        <StackPanel>
            <Label x:Name="evalName" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center">Une Evaluation</Label>

            <Label FontSize="17" HorizontalAlignment="Left" >Notes liees a l'evaluation :</Label>
            <ListView  x:Name="listeNotes" HorizontalAlignment="Left" Width="300">
            </ListView>

            <WrapPanel HorizontalAlignment="Center">
                <Button x:Name="addNote" Width="150" Margin="0 15 0 0" Click="addNote_Click" >Ajouter une note</Button>
            </WrapPanel>
        </StackPanel>

    </Grid>
</Window>
