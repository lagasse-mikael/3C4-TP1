<Window x:Class="TP1_Base_Prof.Windows.ModTeacher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP1_Base_Prof.Windows"
        mc:Ignorable="d"
        Title="ModTeacher" Height="450" Width="800">

    <StackPanel Background="#23272a" >

        


            <WrapPanel  HorizontalAlignment="Left" Margin=" 30 15 0 0">
                <TextBlock Style="{StaticResource TextWhiteMod}">User :</TextBlock>
                <TextBox x:Name="UserIdTextBox" FontWeight="Bold" Margin="10 0 0 0" Style="{StaticResource roundTextBoxMod}" TextChanged="UserIdTextBox_TextChanged"></TextBox>

            </WrapPanel>


            <ListView Style="{StaticResource ListViewMod}">
                
            </ListView>

        <WrapPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0 15 0 0 ">
            <Button Content="Se connecter" Style="{StaticResource ButtonStyleConnexion}" Margin="10" Click="LoginButton_Click"/>

            <Button Content="Mot de passe oublié" Style="{StaticResource DarkButtonConnexion}" Margin="10"/>
        </WrapPanel>



    </StackPanel>
</Window>
