<Window x:Class="TP1_Base_Prof.Modifier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP1_Base_Prof"
        mc:Ignorable="d"
        Title="Fenetre Admin" Height="275" Width="300">
    <Window.Resources>

    </Window.Resources>
    <StackPanel Background="#23272a" >

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        </Grid>

        <WrapPanel  Grid.Row="0" HorizontalAlignment="Center">
            <Button Content="Modifier les étudiants" Style="{StaticResource ButtonStyleModif}" Margin="10" Click="ModifEtudiants"/>
        </WrapPanel>

        <WrapPanel Grid.Row="0" HorizontalAlignment="Center">
            <Button Content="Modifier les enseignants" Style="{StaticResource ButtonStyleModif}" Margin="10" Click="ModifProfs"/>
        </WrapPanel>

        <WrapPanel Grid.Row="0" HorizontalAlignment="Center">
            <Button Content="Modifier les horaires" Style="{StaticResource ButtonStyleModif}" Margin="10" Click="ModifHoraires" />

        </WrapPanel>


        <Line X1="0" Y1="0" X2="1" Y2="0" Stroke="white" StrokeThickness="3" Stretch="Fill" Width=" 250"></Line>
        <!--<Line X1="1" Y1="1" X2="1" Y2="0" Stroke="white" StrokeThickness="3" Stretch="Fill" Width=" 250"></Line>-->

        <WrapPanel Grid.Row="0" HorizontalAlignment="Center">
            <Button Content="Quitter" Style="{StaticResource DarkButtonModif}" Margin="10" Click="Leave" />

        </WrapPanel>
    </StackPanel>
</Window>
